{
    "env": {
        "node": true,
        "es2021": true
    },
    "plugins": [
        "regexp"
    ],
    "extends": [ 
        "eslint:recommended",
        "plugin:regexp/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": [
        "public/js/"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
